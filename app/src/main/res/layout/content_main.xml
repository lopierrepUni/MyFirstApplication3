<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:nestedScrollingEnabled="true"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/futurafontfamily"
            android:text="Real-time location"
            android:textSize="16sp"
            android:textStyle="bold"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="27dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/uninorteRed"></View>


        <org.osmdroid.views.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="369dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

        </org.osmdroid.views.MapView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="410dp"
            android:text="Historial de Posiciones" />

        <Button
            android:id="@+id/bFechaIni"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginTop="430dp"
            android:baselineAligned="false"
            android:text="Fecha Inicial"
            android:textSize="12sp" />

        <Button
            android:id="@+id/bHoraIni"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginTop="470dp"
            android:text="Hora Inicial"
            android:textSize="12sp" />

        <Button
            android:id="@+id/bFechaFin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="430dp"
            android:text="Fecha Final"
            android:textSize="12sp" />

        <Button
            android:id="@+id/bHoraFin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="470dp"
            android:text="Hora Final"
            android:textSize="12sp" />

        <Button
            android:id="@+id/bLocsHist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="510dp"
            android:text="Ver Historial" />

        <TextView
            android:id="@+id/internetState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/futurafontfamily"
            android:text="Estoy Conectado"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="16sp" />

        <TextView
            android:id="@+id/gpsState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/futurafontfamily"
            android:text="GPS"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="16sp" />


    </RelativeLayout>

</ScrollView>